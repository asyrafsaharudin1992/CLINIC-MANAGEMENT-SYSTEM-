<body>
    <div id="root"></div>

    <script type="text/babel">
        const { useState } = React;

        const App = () => {
            // DATA
            const patient = { name: "Sarah binti Ahmad", id: "PT-001", age: 28, gender: "Female" };
            
            // STATE
            const [soap, setSoap] = useState({ s: "", o: "", a: "", p: "" });
            const [isSaving, setIsSaving] = useState(false);

            const handleFinish = () => {
                console.log("Button Clicked"); // Debug check
                setIsSaving(true);
                
                // SIMULATE SAVING (1 second delay)
                setTimeout(() => {
                    alert("✅ SUCCESS: Data Saved!\n\n(This is a demo. In the next step, we connect this to Firebase.)");
                    setSoap({ s: "", o: "", a: "", p: "" }); // Reset form
                    setIsSaving(false);
                }, 1000);
            };

            return (
                <div className="app-grid">
                    
                    {/* 1. HEADER */}
                    <div className="header">
                        <div className="flex items-center gap-3">
                            <div className="w-10 h-10 bg-blue-600 rounded-lg flex items-center justify-center text-white font-bold text-xl">Ar</div>
                            <div className="font-bold text-lg text-slate-800">AraCare EMR</div>
                        </div>
                        <div className="text-sm font-bold text-slate-500">Dr. Asyraf</div>
                    </div>

                    {/* 2. LEFT: PATIENT */}
                    <div className="tile">
                        <div className="text-center mb-6 pt-4">
                            <div className="w-20 h-20 bg-blue-50 text-blue-600 rounded-full flex items-center justify-center text-2xl font-bold mx-auto mb-3">SA</div>
                            <h2 className="text-lg font-bold">{patient.name}</h2>
                            <p className="text-sm text-slate-500">{patient.age}y • {patient.gender}</p>
                        </div>
                        <div className="border-t pt-4">
                            <p className="text-xs font-bold text-slate-400 uppercase mb-2">Alerts</p>
                            <div className="bg-red-50 text-red-600 text-xs font-bold p-2 rounded-lg text-center">Allergy: Penicillin</div>
                        </div>
                    </div>

                    {/* 3. MIDDLE: SOAP NOTES */}
                    <div className="tile">
                        <div className="flex items-center gap-2 mb-4">
                            <i className="ri-file-edit-line text-blue-600 text-xl"></i>
                            <h2 className="font-bold text-lg">Consultation Notes</h2>
                        </div>
                        <div className="scroll-area">
                            <label className="soap-label text-slate-500">Subjective</label>
                            <textarea className="soap-textarea" placeholder="Patient's complaints..." value={soap.s} onChange={(e) => setSoap({...soap, s: e.target.value})}></textarea>

                            <label className="soap-label text-slate-500">Objective</label>
                            <textarea className="soap-textarea" placeholder="Physical findings..." value={soap.o} onChange={(e) => setSoap({...soap, o: e.target.value})}></textarea>

                            <label className="soap-label text-slate-500">Assessment</label>
                            <textarea className="soap-textarea" placeholder="Diagnosis..." value={soap.a} onChange={(e) => setSoap({...soap, a: e.target.value})}></textarea>

                            <label className="soap-label text-slate-500">Plan</label>
                            <textarea className="soap-textarea" placeholder="Treatment..." value={soap.p} onChange={(e) => setSoap({...soap, p: e.target.value})}></textarea>
                        </div>
                    </div>

                    {/* 4. RIGHT: ACTIONS */}
                    <div className="tile bg-slate-50">
                        <h2 className="font-bold text-lg mb-4">Actions</h2>
                        <div className="flex-1"></div> {/* Spacer */}
                        
                        <button className="btn" onClick={handleFinish}>
                            {isSaving ? "Saving..." : "Finish & Save"}
                        </button>
                    </div>

                </div>
            );
        };

        const root = ReactDOM.createRoot(document.getElementById('root'));
        root.render(<App />);
    </script>
</body>
</html>
